{% set active = 'accueil' %}

	{% extends "baselayout.html.twig" %}

	{% block title %}{{ parent() }} - Accueil{% endblock %}

		{% block body %}
			<div class="row">
				<div class="col-lg-12">
					<h1 class="greeter-caption text-center">Bienvenue chez MegaVoyage !</h1>
					<img class="img-responsive thumbnail" src="images/accueil.jpeg" alt="accueil">
				</div>
			</div>
			<div class="row text-center">
				<div class="col-lg-6">
					<div class="panel panel-primary">
						<div class="panel-heading">
							<h4 class="">Actualités</h2>
							</div>
							{% if list is not empty %}
								<div class="panel-body">
									Programmations dans les dix prochains jours. Saisissez vite ces opportunités!
								</div>
								<div class="list-group">
									{% for elm in list %}
										<a class="list-group-item list-group-item-info" href="/circuit/{{ elm[0] }}"><strong>{{ elm[1].description }}, le {{ elm[2]|date('d/m/Y') }}</strong></a>
									{% endfor %}
										<a class="list-group-item list-group-item-info" href="/circuit"><strong>Voir tous les circuits</strong></a>
								</div>
							{% else %}
								<div class="panel-body">
									Désolé, pas de programmations prévues dans les prochains jours!
								</div>
							{% endif %}
						</div>
					</div>
					<div class="col-lg-6">
						<div class="panel panel-primary">
							<div class="panel-heading">
								<h4 class="">Qui sommes-nous ?</h2>
								</div>
								<div class="panel-body">
									Chez MegaVoyage, nous avons à coeur la satisfaction client.
								</div>
							</div>
						</div>
					</div>
					<div class="row text-center">
						<div class="col-lg-6">
							<div class="panel panel-primary">
								<div class="panel-heading">
									<h4 class="">Destinations</h2>
									</div>
									<div class="">
										<div id="carousel" class="carousel slide" data-ride="carousel">
											<ol class="carousel-indicators">
												<li data-target="#carousel" data-slide-to="0" class="active"></li>
												<li data-target="#carousel" data-slide-to="1"></li>
												<li data-target="#carousel" data-slide-to="2"></li>
											</ol>
											<div class="carousel-inner" role="listbox">
												<div class="item active">
													<img class="d-block img-fluid img-responsive" src="/images/paris.jpg">
													<h2 class="carousel-caption">Paris</h2>
												</div>
												<div class="item">
													<img class="d-block img-fluid img-responsive" src="/images/vietnam.jpg">
													<h2 class="carousel-caption">Vietnam</h2>
												</div>
												<div class="item">
													<img class="d-block img-fluid img-responsive" src="/images/andalousie.jpg">
													<h2 class="carousel-caption">Andalousie</h2>
												</div>
											</div>
											<a class="left carousel-control" href="#carousel" data-slide="prev">
												<span class="glyphicon glyphicon-chevron-left"></span>
											</a>
											<a class="right carousel-control" href="#carousel" data-slide="next">
												<span class="glyphicon glyphicon-chevron-right"></span>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endblock %}

					{% block script %}
						<script type="text/javascript">
						$(function () {
							$('.carousel').carousel({ interval: 2500 });
						});</script>
					{% endblock %}